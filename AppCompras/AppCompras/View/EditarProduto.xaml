<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCompras.View.EditarProduto"
             Title="{Binding descricao}">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
           <Label Text="Descrição:" />
           <Entry x:Name="txt_desc" Text="{Binding descricao}" />

           <Label Text="Quantidade:"/>
            <Entry x:Name="txt_quant" Text="{Binding quantidade}" />

           <Label Text="Preço:"/>
           <Entry x:Name="txt_prc" Text="{Binding preco}" />
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>